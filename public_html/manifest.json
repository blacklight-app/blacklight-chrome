{
  "manifest_version": 2,

  "name": "BlackLight",
  "description": "Incited a riot once",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["contentScript.js"],
    "run_at": "document_end",
    "all_frames": true
    }],
  "permissions": [
    "activeTab",
    "contextMenus",
    "http://www.blacklight-app.com/",
    "https://www.blacklight-app.com/",
    "identity"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
