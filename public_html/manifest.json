{
  "manifest_version": 2,

  "name": "BlackLight",
  "description": "This extension danks memes",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "http://www.blacklight-app.com/",
    "https://www.blacklight-app.com/",
    "identity"
  ],
  "background": {
    "scripts": ["background.js"]
  } 
}
